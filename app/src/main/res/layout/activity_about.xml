<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="52dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#111827"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Technology and Development Individual Assignment"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:paddingBottom="12dp" />

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Student Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nur Izzati Afiqah Binti Azlan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student ID: 2022630464"
                    android:textSize="14sp"
                    android:textColor="#4B5563"
                    android:paddingTop="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Course Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ICT602 Mobile Technology and Development"
                    android:textSize="14sp"
                    android:textColor="#4B5563" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- App Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Application"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This application calculates monthly electricity bills based on usage and rebate."
                    android:textSize="14sp"
                    android:textColor="#4B5563"
                    android:paddingBottom="12dp" />

                <!-- Clickable URL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GitHub"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#111827" />

                <TextView
                    android:id="@+id/tvUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://github.com/Zatixzlan/ElectricityBillCalculator_2022630464"
                    android:autoLink="web"
                    android:textColor="#7C3AED"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 IzzatiAzlan. All rights reserved."
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:gravity="center"
            android:paddingTop="14dp" />

    </LinearLayout>
</ScrollView>
